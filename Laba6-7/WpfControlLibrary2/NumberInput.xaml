<UserControl x:Class="WpfControlLibrary2.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel Width="300px" HorizontalAlignment="Center" >
            <TextBlock x:Name="Header" TextAlignment="Center" Text="Type the number, please and push the button to confirm"></TextBlock>

            <TextBlock Margin="0 0 0  10" Background="AntiqueWhite" x:Name="TextForNumbers"></TextBlock>

            <TextBox Text="{Binding ElementName = NumberInput}"  Margin="0 0 0  10"  x:Name="NumbersInput"></TextBox>

            <Button   Margin="0 0 0  10" x:Name="ButtonForNumbers" Content="Enter"></Button>
        </StackPanel>


    </Grid>
</UserControl>
